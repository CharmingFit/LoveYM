<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_order_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.steven.loveym.OrderHome">


    <com.example.steven.loveym.TitleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title"/>


    <Button
        android:id="@+id/button_order_new"
        android:layout_width="@dimen/button_weight"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="New Order"
        android:textSize="@dimen/button_font_size"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:textAllCaps="false"

        />
    <Button
        android:id="@+id/button_order_processing"
        android:layout_width="@dimen/button_weight"
        android:layout_height="wrap_content"
        android:text="Processing"
        android:textSize="@dimen/button_font_size"
        android:layout_below="@id/button_order_new"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:textAllCaps="false"

        />
    <Button
        android:id="@+id/button_order_finished"
        android:layout_width="@dimen/button_weight"
        android:layout_height="wrap_content"
        android:text="Finished Order"
        android:textSize="@dimen/button_font_size"
        android:layout_below="@id/button_order_processing"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:textAllCaps="false"

        />









</RelativeLayout>
