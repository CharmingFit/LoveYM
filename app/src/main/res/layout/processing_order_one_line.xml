<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/transactionID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/customer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/transactionID"
        android:textSize="25sp"/>

    <ImageView
        android:id="@+id/paid_image"
        android:layout_toRightOf="@id/customer_name"
        android:layout_width="50dp"
        android:layout_height="25dp" />

    <ImageView
        android:id="@+id/dilivery_image"
        android:layout_toRightOf="@id/paid_image"
        android:layout_width="50dp"
        android:layout_height="25dp" />

    <TextView
        android:id="@+id/profitRatio"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"/>



    <TextView
        android:id="@+id/profitRatioText"
        android:layout_toLeftOf="@id/profitRatio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="收益率"
        android:textSize="25sp"/>




    <TextView
        android:id="@+id/transaction_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profitRatio"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="25sp"/>






</RelativeLayout>